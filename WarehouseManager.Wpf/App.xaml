<Application x:Class="WarehouseManager.Wpf.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WarehouseManager.Wpf"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             xmlns:convertor="clr-namespace:WarehouseManager.Wpf.Convertor">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemeResources />
                <ui:XamlControlsResources />
            </ResourceDictionary.MergedDictionaries>

            <!-- Базовые кисти (значения для светлой темы по умолчанию, при старте будут обновлены помощником) -->
            <SolidColorBrush x:Key="SurfaceBrush" Color="#FFF4D4C4"/>
            <SolidColorBrush x:Key="PanelBrush" Color="#FFEEE2DC"/>
            <SolidColorBrush x:Key="CardBrush" Color="#FFEDC7B7"/>
            <SolidColorBrush x:Key="PrimaryTextBrush" Color="#FF123C69"/>
            <SolidColorBrush x:Key="SecondaryTextBrush" Color="#FFEEE2DC"/>
            <SolidColorBrush x:Key="TableTextBrush" Color="#FF123C69"/>
            <SolidColorBrush x:Key="TableHeaderTextBrush" Color="#FF123C69"/>
            <SolidColorBrush x:Key="AccentBrush" Color="#FF123C69"/>
            <SolidColorBrush x:Key="AccentSecondaryBrush" Color="#FFAC3B61"/>
            <SolidColorBrush x:Key="AccentHoverBrush" Color="#FFC42D4D"/>
            <SolidColorBrush x:Key="BorderBrushBase" Color="#FFBAB2B5"/>
            <SolidColorBrush x:Key="MutedBrush" Color="#FFD8C3A5"/>

            <!-- Конвертеры -->
            <convertor:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
            <convertor:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            <convertor:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
            <convertor:GreaterThanOneConverter x:Key="GreaterThanOneConverter"/>
            <convertor:GreaterThanZeroConverter x:Key="GreaterThanZeroConverter"/>
            <convertor:LessThanTotalPagesConverter x:Key="LessThanTotalPagesConverter"/>

            <Style x:Key="AccentButtonStyle" TargetType="Button">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="{DynamicResource AccentHoverBrush}"/>
                                    <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="{DynamicResource MutedBrush}"/>
                                    <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="TableListViewStyle" TargetType="ListView">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
            </Style>

            <Style x:Key="TableListViewItemStyle" TargetType="ListViewItem">
                <Setter Property="Margin" Value="0,0,0,8"/>
                <Setter Property="Padding" Value="12"/>
                <Setter Property="Background" Value="{DynamicResource CardBrush}"/>
                <Setter Property="Foreground" Value="{DynamicResource TableTextBrush}"/>
                <Setter Property="TextElement.Foreground" Value="{DynamicResource TableTextBrush}"/>
                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                <Setter Property="BorderBrush" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
                    </Trigger>
                    <Trigger Property="IsSelected" Value="True">
                        <Setter Property="Background" Value="{DynamicResource AccentSecondaryBrush}"/>
                        <Setter Property="Foreground" Value="{DynamicResource SecondaryTextBrush}"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <Style x:Key="TableGridViewColumnHeaderStyle" TargetType="GridViewColumnHeader">
                <Setter Property="Foreground" Value="{DynamicResource TableHeaderTextBrush}"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                <Setter Property="Padding" Value="0,0,0,8"/>
                <Setter Property="BorderBrush" Value="{DynamicResource MutedBrush}"/>
                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                <Setter Property="Background" Value="Transparent"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
