<Window x:Class="WarehouseManager.Wpf.View.UpdateOrderStatusWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:local="clr-namespace:WarehouseManager.Wpf.View"
        mc:Ignorable="d"
        Title="Обновление статуса заказа"
        Width="500"
        MinWidth="400"
        Height="300"
        MinHeight="250"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen"
        Background="#EDC7B7">
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="Обновление статуса заказа"
                   Grid.Row="0"
                   FontSize="24"
                   FontWeight="SemiBold"
                   Foreground="#123C69"
                   Margin="0,0,0,24"/>

        <!-- Форма -->
        <StackPanel Grid.Row="1">
            <Border Background="#EEE2DC" CornerRadius="8" Padding="12" Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="Статус *" Foreground="#123C69" FontSize="12" Margin="0,0,0,4"/>
                    <ComboBox SelectedValue="{Binding SelectedStatusId}"
                              SelectedValuePath="Id"
                              DisplayMemberPath="StatusName"
                              ItemsSource="{Binding AvailableStatuses}"
                              Background="Transparent"
                              Foreground="#123C69"
                              BorderBrush="#BAB2B5"
                              BorderThickness="1"
                              MinHeight="30"/>
                </StackPanel>
            </Border>

            <!-- Сообщение об ошибке -->
            <TextBlock Text="{Binding ErrorMessage}"
                       Foreground="#AC3B61"
                       TextWrapping="Wrap"
                       Margin="0,0,0,16"
                       Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>
        </StackPanel>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="Отмена"
                    Command="{Binding CancelCommand}"
                    Padding="24,8"
                    Margin="0,0,8,0"
                    MinWidth="100"
                    Background="#BAB2B5"
                    Foreground="#123C69"
                    BorderBrush="#123C69"
                    BorderThickness="2"
                    Cursor="Hand"/>
            <Button Content="Сохранить"
                    Command="{Binding SaveCommand}"
                    Padding="24,8"
                    MinWidth="100"
                    MinHeight="40"
                    FontSize="16"
                    Background="#123C69"
                    Foreground="#EEE2DC"
                    BorderBrush="#BAB2B5"
                    BorderThickness="2"
                    Cursor="Hand">
                <Button.Triggers>
                    <EventTrigger RoutedEvent="MouseEnter">
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetProperty="(Background).(SolidColorBrush.Color)"
                                                To="#AC3B61" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="MouseLeave">
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetProperty="(Background).(SolidColorBrush.Color)"
                                                To="#123C69" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Button.Triggers>
            </Button>
        </StackPanel>
    </Grid>
</Window>

