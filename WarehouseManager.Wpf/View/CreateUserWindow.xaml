<Window x:Class="WarehouseManager.Wpf.View.CreateUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:local="clr-namespace:WarehouseManager.Wpf.View"
        mc:Ignorable="d"
        Title="Создание пользователя"
        Width="600"
        MinWidth="500"
        Height="650"
        MinHeight="600"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen"
        Background="#EDC7B7">
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="Создание пользователя"
                   Grid.Row="0"
                   FontSize="24"
                   FontWeight="SemiBold"
                   Foreground="#123C69"
                   Margin="0,0,0,24"/>

        <!-- Форма -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Email -->
                <Border Background="#EEE2DC" CornerRadius="8" Padding="12" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Email *" Foreground="#123C69" FontSize="12" Margin="0,0,0,4"/>
                        <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                                 Foreground="#123C69"
                                 Background="Transparent"
                                 BorderBrush="#BAB2B5"
                                 BorderThickness="1"
                                 CaretBrush="#123C69"
                                 FocusVisualStyle="{x:Null}"
                                 MinHeight="30"/>
                    </StackPanel>
                </Border>

                <!-- Пароль -->
                <Border Background="#EEE2DC" CornerRadius="8" Padding="12" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Пароль *" Foreground="#123C69" FontSize="12" Margin="0,0,0,4"/>
                        <PasswordBox x:Name="PasswordBox"
                                     PasswordChanged="PasswordBox_PasswordChanged"
                                     Foreground="#123C69"
                                     Background="Transparent"
                                     BorderBrush="#BAB2B5"
                                     BorderThickness="1"
                                     FocusVisualStyle="{x:Null}"
                                     MinHeight="30"/>
                    </StackPanel>
                </Border>

                <!-- Имя -->
                <Border Background="#EEE2DC" CornerRadius="8" Padding="12" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Имя *" Foreground="#123C69" FontSize="12" Margin="0,0,0,4"/>
                        <TextBox Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}"
                                 Foreground="#123C69"
                                 Background="Transparent"
                                 BorderBrush="#BAB2B5"
                                 BorderThickness="1"
                                 CaretBrush="#123C69"
                                 FocusVisualStyle="{x:Null}"
                                 MinHeight="30"/>
                    </StackPanel>
                </Border>

                <!-- Фамилия -->
                <Border Background="#EEE2DC" CornerRadius="8" Padding="12" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Фамилия *" Foreground="#123C69" FontSize="12" Margin="0,0,0,4"/>
                        <TextBox Text="{Binding MiddleName, UpdateSourceTrigger=PropertyChanged}"
                                 Foreground="#123C69"
                                 Background="Transparent"
                                 BorderBrush="#BAB2B5"
                                 BorderThickness="1"
                                 CaretBrush="#123C69"
                                 FocusVisualStyle="{x:Null}"
                                 MinHeight="30"/>
                    </StackPanel>
                </Border>

                <!-- Отчество -->
                <Border Background="#EEE2DC" CornerRadius="8" Padding="12" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Отчество" Foreground="#123C69" FontSize="12" Margin="0,0,0,4"/>
                        <TextBox Text="{Binding Patronymic, UpdateSourceTrigger=PropertyChanged}"
                                 Foreground="#123C69"
                                 Background="Transparent"
                                 BorderBrush="#BAB2B5"
                                 BorderThickness="1"
                                 CaretBrush="#123C69"
                                 FocusVisualStyle="{x:Null}"
                                 MinHeight="30"/>
                    </StackPanel>
                </Border>

                <!-- Телефон -->
                <Border Background="#EEE2DC" CornerRadius="8" Padding="12" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Телефон *" Foreground="#123C69" FontSize="12" Margin="0,0,0,4"/>
                        <TextBox Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged}"
                                 Foreground="#123C69"
                                 Background="Transparent"
                                 BorderBrush="#BAB2B5"
                                 BorderThickness="1"
                                 CaretBrush="#123C69"
                                 FocusVisualStyle="{x:Null}"
                                 MinHeight="30"/>
                    </StackPanel>
                </Border>

                <!-- Роль -->
                <Border Background="#EEE2DC" CornerRadius="8" Padding="12" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Роль *" Foreground="#123C69" FontSize="12" Margin="0,0,0,4"/>
                        <ComboBox ItemsSource="{Binding Roles}"
                                  SelectedValue="{Binding SelectedRoleId}"
                                  SelectedValuePath="Id"
                                  DisplayMemberPath="RoleName"
                                  Background="Transparent"
                                  Foreground="#123C69"
                                  BorderBrush="#BAB2B5"
                                  BorderThickness="1"
                                  MinHeight="30"/>
                    </StackPanel>
                </Border>

                <!-- Сообщение об ошибке -->
                <TextBlock Text="{Binding ErrorMessage}"
                           Foreground="#AC3B61"
                           TextWrapping="Wrap"
                           Margin="0,0,0,16"
                           Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="Отмена"
                    Command="{Binding CancelCommand}"
                    Padding="24,8"
                    Margin="0,0,8,0"
                    MinWidth="100"
                    Background="#BAB2B5"
                    Foreground="#123C69"
                    BorderBrush="#123C69"
                    BorderThickness="2"
                    Cursor="Hand"/>
            <Button Content="Сохранить"
                    Command="{Binding SaveCommand}"
                    Padding="24,8"
                    MinWidth="100"
                    MinHeight="40"
                    FontSize="16"
                    Background="#123C69"
                    Foreground="#EEE2DC"
                    BorderBrush="#BAB2B5"
                    BorderThickness="2"
                    Cursor="Hand">
                <Button.Triggers>
                    <EventTrigger RoutedEvent="MouseEnter">
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetProperty="(Background).(SolidColorBrush.Color)"
                                                To="#AC3B61" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="MouseLeave">
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetProperty="(Background).(SolidColorBrush.Color)"
                                                To="#123C69" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Button.Triggers>
            </Button>
        </StackPanel>
    </Grid>
</Window>

