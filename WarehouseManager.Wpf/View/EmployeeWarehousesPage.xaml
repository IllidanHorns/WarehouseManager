<UserControl x:Class="WarehouseManager.Wpf.View.EmployeeWarehousesPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="{DynamicResource SurfaceBrush}">
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="Назначение сотрудников на склады"
                   Grid.Row="0"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="{DynamicResource PrimaryTextBrush}"
                   Margin="0,0,0,16"/>

        <!-- Панель фильтров и кнопка добавления -->
        <Grid Grid.Row="1" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Фильтры -->
            <ScrollViewer Grid.Column="0"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Disabled"
                          Margin="0,0,16,0">
                <StackPanel Orientation="Horizontal">
                    <!-- Фильтр по сотруднику -->
                    <Border Background="{DynamicResource PanelBrush}"
                            CornerRadius="8"
                            Padding="12"
                            Margin="0,0,8,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Сотрудник:"
                                       Foreground="{DynamicResource PrimaryTextBrush}"
                                       VerticalAlignment="Center"
                                       Margin="0,0,8,0"/>
                            <ComboBox ItemsSource="{Binding Employees}"
                                      SelectedItem="{Binding SelectedEmployee}"
                                      DisplayMemberPath="FullName"
                                      Width="250"
                                      Background="Transparent"
                                      Foreground="{DynamicResource PrimaryTextBrush}"
                                      BorderBrush="{DynamicResource BorderBrushBase}"
                                      BorderThickness="1"/>
                            <Button Content="✕"
                                    Command="{Binding ClearEmployeeFilterCommand}"
                                    Padding="8,4"
                                    Margin="8,0,0,0"
                                    Background="{DynamicResource AccentSecondaryBrush}"
                                    Foreground="{DynamicResource SecondaryTextBrush}"
                                    BorderBrush="{DynamicResource AccentBrush}"
                                    BorderThickness="1"
                                    Cursor="Hand"
                                    Visibility="{Binding IsEmployeeSelected, Converter={StaticResource BoolToVisibilityConverter}}"
                                    FontSize="12"
                                    FontWeight="Bold"/>
                        </StackPanel>
                    </Border>

                    <!-- Фильтр по складу -->
                    <Border Background="{DynamicResource PanelBrush}"
                            CornerRadius="8"
                            Padding="12"
                            Margin="0,0,8,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Склад:"
                                       Foreground="{DynamicResource PrimaryTextBrush}"
                                       VerticalAlignment="Center"
                                       Margin="0,0,8,0"/>
                            <ComboBox ItemsSource="{Binding Warehouses}"
                                      SelectedItem="{Binding SelectedWarehouse}"
                                      DisplayMemberPath="Address"
                                      Width="250"
                                      Background="Transparent"
                                      Foreground="{DynamicResource PrimaryTextBrush}"
                                      BorderBrush="{DynamicResource BorderBrushBase}"
                                      BorderThickness="1"/>
                            <Button Content="✕"
                                    Command="{Binding ClearWarehouseFilterCommand}"
                                    Padding="8,4"
                                    Margin="8,0,0,0"
                                    Background="{DynamicResource AccentSecondaryBrush}"
                                    Foreground="{DynamicResource SecondaryTextBrush}"
                                    BorderBrush="{DynamicResource AccentBrush}"
                                    BorderThickness="1"
                                    Cursor="Hand"
                                    Visibility="{Binding IsWarehouseSelected, Converter={StaticResource BoolToVisibilityConverter}}"
                                    FontSize="12"
                                    FontWeight="Bold"/>
                        </StackPanel>
                    </Border>

                    <Button Content="Поиск"
                            Command="{Binding FilterCommand}"
                            Padding="16,8"
                            Background="{DynamicResource AccentBrush}"
                            Foreground="{DynamicResource SecondaryTextBrush}"
                            BorderBrush="{DynamicResource BorderBrushBase}"
                            Cursor="Hand"/>
                </StackPanel>
            </ScrollViewer>

            <!-- Кнопка добавления -->
            <Button Grid.Column="1"
                    Content="Добавить назначение"
                    Command="{Binding OpenCreateWindowCommand}"
                    Padding="24,12"
                    FontSize="16"
                    Background="{DynamicResource AccentBrush}"
                    Foreground="{DynamicResource SecondaryTextBrush}"
                    BorderBrush="{DynamicResource BorderBrushBase}"
                    BorderThickness="2"
                    Cursor="Hand"/>
        </Grid>

        <!-- Сообщение об ошибке -->
        <TextBlock Text="{Binding ErrorMessage}"
                   Grid.Row="1"
                   Foreground="{DynamicResource AccentSecondaryBrush}"
                   Margin="0,80,0,0"
                   TextWrapping="Wrap"
                   Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>

        <!-- Список назначений -->
        <Border Grid.Row="2"
                Background="{DynamicResource PanelBrush}"
                CornerRadius="8"
                Padding="16">
            <ListView ItemsSource="{Binding EmployeeWarehouses}"
                      Style="{StaticResource TableListViewStyle}">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem" BasedOn="{StaticResource TableListViewItemStyle}"/>
                </ListView.ItemContainerStyle>
                <ListView.View>
                    <GridView AllowsColumnReorder="True"
                              ColumnHeaderContainerStyle="{StaticResource TableGridViewColumnHeaderStyle}">
                        <GridViewColumn Header="Email сотрудника" Width="220"
                                        DisplayMemberBinding="{Binding EmployeeEmail}"/>
                        <GridViewColumn Header="ФИО сотрудника" Width="260">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding EmployeeFullName}" Foreground="{DynamicResource PrimaryTextBrush}" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Адрес склада" Width="320"
                                        DisplayMemberBinding="{Binding WarehouseAddress}"/>
                        <GridViewColumn Header="Дата назначения" Width="200">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Foreground="{DynamicResource PrimaryTextBrush}">
                                        <Run Text="{Binding CreationDateTime, StringFormat='{}{0:dd.MM.yyyy HH:mm}'}"/>
                                    </TextBlock>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Статус" Width="120">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="Активно"
                                               Foreground="{DynamicResource PrimaryTextBrush}"
                                               FontWeight="SemiBold"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Действия" Width="160">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Снять"
                                            Command="{Binding DataContext.DeleteEmployeeWarehouseCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                            CommandParameter="{Binding}"
                                            Padding="12,6"
                                            Background="{DynamicResource AccentSecondaryBrush}"
                                            Foreground="{DynamicResource SecondaryTextBrush}"
                                            BorderBrush="{DynamicResource AccentBrush}"
                                            BorderThickness="1"
                                            FontSize="12"
                                            Cursor="Hand"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </Border>

        <!-- Панель пагинации -->
        <Grid Grid.Row="3" Margin="0,16,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Информация о странице -->
            <TextBlock Grid.Column="0"
                       VerticalAlignment="Center"
                       Foreground="{DynamicResource PrimaryTextBrush}">
                <Run Text="Страница"/>
                <Run Text="{Binding CurrentPage}"/>
                <Run Text=" из "/>
                <Run Text="{Binding TotalPages}"/>
                <Run Text=" (Всего: "/>
                <Run Text="{Binding TotalCount}"/>
                <Run Text=")"/>
            </TextBlock>

            <!-- Кнопки навигации -->
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <!-- Выбор размера страницы -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,16,0">
                    <TextBlock Text="Строк на странице: " 
                               Foreground="{DynamicResource PrimaryTextBrush}" 
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"/>
                    <ComboBox Width="80"
                              SelectedItem="{Binding PageSize, UpdateSourceTrigger=PropertyChanged}"
                              ItemsSource="{Binding AvailablePageSizes}"
                              Background="{DynamicResource PanelBrush}"
                              Foreground="{DynamicResource PrimaryTextBrush}"
                              BorderBrush="{DynamicResource BorderBrushBase}"
                              BorderThickness="1"/>
                </StackPanel>
                
                <Button Content="◄ Назад"
                        Command="{Binding PreviousPageCommand}"
                        IsEnabled="{Binding CurrentPage, Converter={StaticResource GreaterThanOneConverter}}"
                        Padding="16,8"
                        Margin="0,0,8,0"
                        Background="{DynamicResource AccentBrush}"
                        Foreground="{DynamicResource SecondaryTextBrush}"
                        BorderBrush="{DynamicResource BorderBrushBase}"
                        Cursor="Hand"/>
                <Button Content="Вперёд ►"
                        Command="{Binding NextPageCommand}"
                        Padding="16,8"
                        Margin="0,0,8,0"
                        Background="{DynamicResource AccentBrush}"
                        Foreground="{DynamicResource SecondaryTextBrush}"
                        BorderBrush="{DynamicResource BorderBrushBase}"
                        Cursor="Hand">
                    <Button.IsEnabled>
                        <MultiBinding Converter="{StaticResource LessThanTotalPagesConverter}">
                            <Binding Path="CurrentPage"/>
                            <Binding Path="TotalPages"/>
                        </MultiBinding>
                    </Button.IsEnabled>
                </Button>
                <Button Content="Обновить"
                        Command="{Binding RefreshCommand}"
                        Padding="16,8"
                        Background="{DynamicResource AccentSecondaryBrush}"
                        Foreground="{DynamicResource SecondaryTextBrush}"
                        BorderBrush="{DynamicResource BorderBrushBase}"
                        Cursor="Hand"/>
            </StackPanel>
        </Grid>

        <!-- Индикатор загрузки -->
        <Border Grid.Row="2"
                Background="#80000000"
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                Panel.ZIndex="1000">
            <TextBlock Text="Загрузка..."
                       Foreground="White"
                       FontSize="20"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
    </Grid>
</UserControl>

