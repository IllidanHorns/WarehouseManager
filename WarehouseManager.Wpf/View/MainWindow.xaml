<Window x:Class="WarehouseManager.Wpf.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:local="clr-namespace:WarehouseManager.Wpf.View"
        mc:Ignorable="d"
        Title="Система управления складом"
        Width="1200"
        Height="800"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource SurfaceBrush}">
    <Window.InputBindings>
        <KeyBinding Key="N" Modifiers="Control" Command="{x:Static local:MainWindow.CreateItemCommand}"/>
        <KeyBinding Key="E" Modifiers="Control" Command="{x:Static local:MainWindow.EditItemCommand}"/>
        <KeyBinding Key="D" Modifiers="Control" Command="{x:Static local:MainWindow.DeleteItemCommand}"/>
        <KeyBinding Key="R" Modifiers="Control" Command="{x:Static local:MainWindow.RefreshCommand}"/>
        <KeyBinding Key="F" Modifiers="Control" Command="{x:Static local:MainWindow.FocusFilterCommand}"/>
        <KeyBinding Key="P" Modifiers="Control" Command="{x:Static local:MainWindow.ToggleNavigationCommand}"/>
        <KeyBinding Key="T" Modifiers="Control" Command="{x:Static local:MainWindow.ToggleThemeCommand}"/>
        <KeyBinding Key="L" Modifiers="Control" Command="{x:Static local:MainWindow.LogoutCommand}"/>
        <KeyBinding Key="Up" Modifiers="Control" Command="{x:Static local:MainWindow.NavigatePrevCommand}"/>
        <KeyBinding Key="Down" Modifiers="Control" Command="{x:Static local:MainWindow.NavigateNextCommand}"/>
    </Window.InputBindings>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Кабина верхних кнопок -->
        <StackPanel Grid.Row="0"
                    Grid.Column="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,8,8,0">
            <Button Command="{Binding ToggleThemeCommand}"
                    Content="{Binding ThemeToggleLabel}"
                    Padding="12,6"
                    Margin="0,0,8,0"
                    Background="{DynamicResource PanelBrush}"
                    Foreground="{DynamicResource PrimaryTextBrush}"
                    BorderBrush="{DynamicResource SecondaryTextBrush}"
                    BorderThickness="1"
                    Cursor="Hand"
                    FontSize="12"
                    MinWidth="100"
                    ToolTip="Переключить светлую/тёмную тему"/>
        </StackPanel>

        <!-- Основной контент -->
        <Grid x:Name="MainGrid" Grid.RowSpan="2" Grid.Column="0">
        </Grid>

        <!-- Панель навигации справа -->
        <Border Grid.Row="1"
                Grid.Column="1"
                Background="{DynamicResource PanelBrush}"
                BorderBrush="{DynamicResource BorderBrushBase}"
                BorderThickness="1,0,0,0"
                Width="250"
                Visibility="{Binding IsNavigationVisible, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Заголовок панели навигации -->
                <Border Grid.Row="0"
                        Background="{DynamicResource AccentBrush}"
                        Padding="12,12,40,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Навигация"
                                   Grid.Column="0"
                                   Foreground="{DynamicResource SecondaryTextBrush}"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"/>
                        <Button Grid.Column="1"
                                Command="{Binding LogoutCommand}"
                                Content="Выход"
                                Padding="12,6"
                                Margin="8,0,0,0"
                                Background="{DynamicResource AccentSecondaryBrush}"
                                Foreground="{DynamicResource SecondaryTextBrush}"
                                BorderBrush="{DynamicResource BorderBrushBase}"
                                BorderThickness="1"
                                Cursor="Hand"
                                FontSize="12"
                                MinWidth="60"
                                ToolTip="Выйти из аккаунта">
                        </Button>
                    </Grid>
                </Border>

                <!-- Список страниц -->
                <ListBox Grid.Row="1"
                         ItemsSource="{Binding NavigationItems}"
                         SelectedItem="{Binding SelectedNavigationItem}"
                         Background="Transparent"
                         BorderThickness="0"
                         Padding="8">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{DynamicResource CardBrush}"
                                    CornerRadius="4"
                                    Padding="12,8"
                                    Margin="0,4,0,0"
                                    Cursor="Hand">
                                <TextBlock Text="{Binding Name}"
                                           Foreground="{DynamicResource PrimaryTextBrush}"
                                           FontSize="14"/>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border x:Name="Bd"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Padding="0">
                                            <ContentPresenter/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Bd" Property="Background" Value="{DynamicResource AccentSecondaryBrush}"/>
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Bd" Property="Background" Value="{DynamicResource AccentHoverBrush}"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Foreground" Value="{DynamicResource SecondaryTextBrush}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </Grid>
        </Border>

        <!-- Кнопка скрытия/показа навигации - всегда видна -->
        <Button Grid.Row="1"
                Grid.Column="1"
                Command="{Binding ToggleNavigationCommand}"
                Width="30"
                Height="30"
                Margin="4,8,4,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Background="{DynamicResource AccentBrush}"
                Foreground="{DynamicResource SecondaryTextBrush}"
                BorderBrush="{DynamicResource BorderBrushBase}"
                BorderThickness="1"
                Cursor="Hand"
                FontSize="12"
                Panel.ZIndex="1000">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Content" Value="◄"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsNavigationVisible}" Value="False">
                            <Setter Property="Content" Value="►"/>
                            <Setter Property="ToolTip" Value="Показать навигацию"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding IsNavigationVisible}" Value="True">
                            <Setter Property="ToolTip" Value="Скрыть навигацию"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
    </Grid>
</Window>

