<Window x:Class="WarehouseManager.Wpf.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:local="clr-namespace:WarehouseManager.Wpf.View"
        mc:Ignorable="d"
        Title="Система управления складом"
        Width="1200"
        Height="800"
        WindowStartupLocation="CenterScreen"
        Background="#EDC7B7">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Основной контент -->
        <Grid x:Name="MainGrid" Grid.Column="0">
        </Grid>

        <!-- Панель навигации справа -->
        <Border Grid.Column="1"
                Background="#EEE2DC"
                BorderBrush="#BAB2B5"
                BorderThickness="1,0,0,0"
                Width="250"
                Visibility="{Binding IsNavigationVisible, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Заголовок панели навигации -->
                <Border Grid.Row="0"
                        Background="#123C69"
                        Padding="12,12,40,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Навигация"
                                   Grid.Column="0"
                                   Foreground="#EEE2DC"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"/>
                        <Button Grid.Column="1"
                                Command="{Binding LogoutCommand}"
                                Content="Выход"
                                Padding="12,6"
                                Margin="8,0,0,0"
                                Background="#AC3B61"
                                Foreground="#EEE2DC"
                                BorderBrush="#BAB2B5"
                                BorderThickness="1"
                                Cursor="Hand"
                                FontSize="12"
                                MinWidth="60"
                                ToolTip="Выйти из аккаунта">
                            <Button.Triggers>
                                <EventTrigger RoutedEvent="MouseEnter">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetProperty="(Background).(SolidColorBrush.Color)"
                                                            To="#C42D4D" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                                <EventTrigger RoutedEvent="MouseLeave">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetProperty="(Background).(SolidColorBrush.Color)"
                                                            To="#AC3B61" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Button.Triggers>
                        </Button>
                    </Grid>
                </Border>

                <!-- Список страниц -->
                <ListBox Grid.Row="1"
                         ItemsSource="{Binding NavigationItems}"
                         SelectedItem="{Binding SelectedNavigationItem}"
                         Background="Transparent"
                         BorderThickness="0"
                         Padding="8">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#EDC7B7"
                                    CornerRadius="4"
                                    Padding="12,8"
                                    Margin="0,4,0,0"
                                    Cursor="Hand">
                                <TextBlock Text="{Binding Name}"
                                           Foreground="#123C69"
                                           FontSize="14"/>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border x:Name="Bd"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Padding="0">
                                            <ContentPresenter/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Bd" Property="Background" Value="#AC3B61"/>
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Bd" Property="Background" Value="#C42D4D"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Foreground" Value="#123C69"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Foreground" Value="#EEE2DC"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </Grid>
        </Border>

        <!-- Кнопка скрытия/показа навигации - всегда видна -->
        <Button Grid.Column="1"
                Command="{Binding ToggleNavigationCommand}"
                Width="30"
                Height="30"
                Margin="4,8,4,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Background="#123C69"
                Foreground="#EEE2DC"
                BorderBrush="#BAB2B5"
                BorderThickness="1"
                Cursor="Hand"
                FontSize="12"
                Panel.ZIndex="1000">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Content" Value="◄"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsNavigationVisible}" Value="False">
                            <Setter Property="Content" Value="►"/>
                            <Setter Property="ToolTip" Value="Показать навигацию"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding IsNavigationVisible}" Value="True">
                            <Setter Property="ToolTip" Value="Скрыть навигацию"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
    </Grid>
</Window>

