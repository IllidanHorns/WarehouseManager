<Window x:Class="WarehouseManager.Wpf.View.CheckoutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Оформление заказа"
        Width="600"
        Height="700"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource SurfaceBrush}">
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="Оформление заказа"
                   Grid.Row="0"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="{DynamicResource PrimaryTextBrush}"
                   Margin="0,0,0,16"/>

        <!-- Форма -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Склад -->
                <Border Background="{DynamicResource PanelBrush}" CornerRadius="8" Padding="12" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Склад *" Foreground="{DynamicResource PrimaryTextBrush}" FontSize="12" Margin="0,0,0,4"/>
                        <StackPanel Orientation="Horizontal">
                            <ComboBox SelectedValue="{Binding SelectedWarehouseId}"
                                      DisplayMemberPath="Address"
                                      SelectedValuePath="Id"
                                      ItemsSource="{Binding Warehouses}"
                                      Foreground="{DynamicResource PrimaryTextBrush}"
                                      Background="Transparent"
                                      BorderBrush="{DynamicResource BorderBrushBase}"
                                      BorderThickness="1"
                                      MinHeight="30"
                                      HorizontalAlignment="Stretch"
                                      VerticalAlignment="Center"/>
                            <Button Content="✕"
                                    Command="{Binding ClearWarehouseCommand}"
                                    Padding="8,4"
                                    Margin="4,0,0,0"
                                    Background="{DynamicResource AccentSecondaryBrush}"
                                    Foreground="{DynamicResource SecondaryTextBrush}"
                                    BorderBrush="{DynamicResource BorderBrushBase}"
                                    BorderThickness="1"
                                    Cursor="Hand"
                                    FontSize="12"
                                    Width="30"
                                    Visibility="{Binding SelectedWarehouseId, Converter={StaticResource GreaterThanOneConverter}}"
                                    ToolTip="Очистить выбор"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Товары в заказе -->
                <Border Background="{DynamicResource PanelBrush}" CornerRadius="8" Padding="12" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Товары в заказе:" Foreground="{DynamicResource PrimaryTextBrush}" FontSize="14" FontWeight="Bold" Margin="0,0,0,8"/>
                        <ItemsControl ItemsSource="{Binding Items}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{DynamicResource CardBrush}"
                                            CornerRadius="4"
                                            Padding="8"
                                            Margin="0,0,0,4">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding Product.Name}"
                                                           FontWeight="Bold"
                                                           Foreground="{DynamicResource PrimaryTextBrush}"/>
                                                <TextBlock>
                                                    <Run Text="Количество: " Foreground="{DynamicResource PrimaryTextBrush}"/>
                                                    <Run Text="{Binding Quantity}" Foreground="{DynamicResource PrimaryTextBrush}"/>
                                                </TextBlock>
                                                <TextBlock>
                                                    <Run Text="Цена: " Foreground="{DynamicResource PrimaryTextBrush}"/>
                                                    <Run Text="{Binding UnitPrice, StringFormat='{}{0:F2}', Mode=OneWay}" Foreground="{DynamicResource PrimaryTextBrush}"/>
                                                    <Run Text=" руб." Foreground="{DynamicResource PrimaryTextBrush}"/>
                                                </TextBlock>
                                            </StackPanel>
                                            <TextBlock Grid.Column="1"
                                                       VerticalAlignment="Center"
                                                       FontSize="16"
                                                       FontWeight="Bold"
                                                       Foreground="{DynamicResource AccentSecondaryBrush}">
                                                <Run Text="{Binding TotalPrice, StringFormat='{}{0:F2}', Mode=OneWay}"/>
                                                <Run Text=" руб."/>
                                            </TextBlock>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- Итого -->
                <Border Background="{DynamicResource PanelBrush}" CornerRadius="8" Padding="12" Margin="0,0,0,16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Итого:"
                                   Grid.Column="0"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource PrimaryTextBrush}"/>
                        <TextBlock Text="{Binding TotalPrice, StringFormat='{}{0:F2} руб.', Mode=OneWay}"
                                   Grid.Column="1"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource AccentSecondaryBrush}"/>
                    </Grid>
                </Border>

                <!-- Сообщение об ошибке -->
                <TextBlock Text="{Binding ErrorMessage}"
                           Foreground="{DynamicResource AccentSecondaryBrush}"
                           TextWrapping="Wrap"
                           Margin="0,0,0,16"
                           Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="Отмена"
                    Command="{Binding CancelCommand}"
                    Padding="24,8"
                    Margin="0,0,8,0"
                    MinWidth="100"
                    Background="{DynamicResource BorderBrushBase}"
                    Foreground="{DynamicResource PrimaryTextBrush}"
                    BorderBrush="{DynamicResource PrimaryTextBrush}"
                    BorderThickness="2"
                    Cursor="Hand"/>
            <Button Content="Оформить заказ"
                    Command="{Binding PlaceOrderCommand}"
                    Padding="24,8"
                    MinWidth="150"
                    MinHeight="40"
                    FontSize="16"
                    Background="{DynamicResource AccentBrush}"
                    Foreground="{DynamicResource SecondaryTextBrush}"
                    BorderBrush="{DynamicResource BorderBrushBase}"
                    BorderThickness="2"
                    Cursor="Hand"/>
        </StackPanel>

        <!-- Индикатор загрузки -->
        <Border Grid.Row="1"
                Background="#80000000"
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                Panel.ZIndex="1000">
            <TextBlock Text="Оформление заказа..."
                       Foreground="White"
                       FontSize="20"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
    </Grid>
</Window>

