<Window x:Class="WarehouseManager.Wpf.View.UpdateEmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:local="clr-namespace:WarehouseManager.Wpf.View"
        mc:Ignorable="d"
        Title="Обновление сотрудника"
        Width="600"
        MinWidth="500"
        Height="500"
        MinHeight="450"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen"
        Background="#EDC7B7">
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="Обновление сотрудника"
                   Grid.Row="0"
                   FontSize="24"
                   FontWeight="SemiBold"
                   Foreground="#123C69"
                   Margin="0,0,0,24"/>

        <!-- Форма -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Пользователь -->
                <Border Background="#EEE2DC" CornerRadius="8" Padding="12" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Пользователь *" Foreground="#123C69" FontSize="12" Margin="0,0,0,4"/>
                        <ComboBox ItemsSource="{Binding AvailableUsers}"
                                  SelectedValue="{Binding SelectedUserId}"
                                  SelectedValuePath="Id"
                                  Background="Transparent"
                                  Foreground="#123C69"
                                  BorderBrush="#BAB2B5"
                                  BorderThickness="1"
                                  MinHeight="30">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Email}" Foreground="#123C69" Margin="0,0,8,0"/>
                                        <TextBlock Foreground="#123C69">
                                            <Run Text="{Binding FirstName}"/>
                                            <Run Text="{Binding MiddleName}"/>
                                            <Run Text="{Binding Patronymic}"/>
                                        </TextBlock>
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>
                </Border>

                <!-- Зарплата -->
                <Border Background="#EEE2DC" CornerRadius="8" Padding="12" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Зарплата *" Foreground="#123C69" FontSize="12" Margin="0,0,0,4"/>
                        <TextBox Text="{Binding Salary, UpdateSourceTrigger=PropertyChanged}"
                                 Foreground="#123C69"
                                 Background="Transparent"
                                 BorderBrush="#BAB2B5"
                                 BorderThickness="1"
                                 CaretBrush="#123C69"
                                 FocusVisualStyle="{x:Null}"
                                 MinHeight="30"/>
                    </StackPanel>
                </Border>

                <!-- Дата рождения -->
                <Border Background="#EEE2DC" CornerRadius="8" Padding="12" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Дата рождения *" Foreground="#123C69" FontSize="12" Margin="0,0,0,4"/>
                        <DatePicker SelectedDate="{Binding DateOfBirth}"
                                    Foreground="#123C69"
                                    Background="Transparent"
                                    BorderBrush="#BAB2B5"
                                    BorderThickness="1"
                                    MinHeight="30"/>
                    </StackPanel>
                </Border>

                <!-- Сообщение об ошибке -->
                <TextBlock Text="{Binding ErrorMessage}"
                           Foreground="#AC3B61"
                           TextWrapping="Wrap"
                           Margin="0,0,0,16"
                           Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="Отмена"
                    Command="{Binding CancelCommand}"
                    Padding="24,8"
                    Margin="0,0,8,0"
                    MinWidth="100"
                    Background="#BAB2B5"
                    Foreground="#123C69"
                    BorderBrush="#123C69"
                    BorderThickness="2"
                    Cursor="Hand"/>
            <Button Content="Сохранить"
                    Command="{Binding SaveCommand}"
                    Padding="24,8"
                    MinWidth="100"
                    MinHeight="40"
                    FontSize="16"
                    Background="#123C69"
                    Foreground="#EEE2DC"
                    BorderBrush="#BAB2B5"
                    BorderThickness="2"
                    Cursor="Hand">
                <Button.Triggers>
                    <EventTrigger RoutedEvent="MouseEnter">
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetProperty="(Background).(SolidColorBrush.Color)"
                                                To="#AC3B61" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="MouseLeave">
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetProperty="(Background).(SolidColorBrush.Color)"
                                                To="#123C69" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Button.Triggers>
            </Button>
        </StackPanel>
    </Grid>
</Window>

