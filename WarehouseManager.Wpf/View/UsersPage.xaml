<UserControl x:Class="WarehouseManager.Wpf.View.UsersPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200">
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="Управление пользователями"
                   Grid.Row="0"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="#123C69"
                   Margin="0,0,0,16"/>

        <!-- Панель фильтров и кнопка добавления -->
        <Grid Grid.Row="1" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Фильтры -->
            <ScrollViewer Grid.Column="0"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Disabled"
                          Margin="0,0,16,0">
                <StackPanel Orientation="Horizontal">
                    <!-- Поиск -->
                    <Border Background="#EEE2DC"
                            CornerRadius="8"
                            Padding="12"
                            Margin="0,0,8,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Поиск:"
                                       Foreground="#123C69"
                                       VerticalAlignment="Center"
                                       Margin="0,0,8,0"/>
                            <TextBox Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}"
                                     Width="250"
                                     Foreground="#123C69"
                                     Background="Transparent"
                                     BorderBrush="#BAB2B5"
                                     BorderThickness="1"
                                     CaretBrush="#123C69"/>
                        </StackPanel>
                    </Border>

                    <!-- Фильтр по роли -->
                    <Border Background="#EEE2DC"
                            CornerRadius="8"
                            Padding="12"
                            Margin="0,0,8,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Роль:"
                                       Foreground="#123C69"
                                       VerticalAlignment="Center"
                                       Margin="0,0,8,0"/>
                            <ComboBox ItemsSource="{Binding Roles}"
                                      SelectedItem="{Binding SelectedRole}"
                                      DisplayMemberPath="RoleName"
                                      Width="200"
                                      Background="Transparent"
                                      Foreground="#123C69"
                                      BorderBrush="#BAB2B5"
                                      BorderThickness="1"/>
                            <Button Content="✕"
                                    Command="{Binding ClearRoleFilterCommand}"
                                    Padding="8,4"
                                    Margin="8,0,0,0"
                                    Background="#AC3B61"
                                    Foreground="#EEE2DC"
                                    BorderBrush="#123C69"
                                    BorderThickness="1"
                                    Cursor="Hand"
                                    Visibility="{Binding IsRoleSelected, Converter={StaticResource BoolToVisibilityConverter}}"
                                    FontSize="12"
                                    FontWeight="Bold"/>
                        </StackPanel>
                    </Border>

                    <Button Content="Поиск"
                            Command="{Binding FilterCommand}"
                            Padding="16,8"
                            Background="#123C69"
                            Foreground="#EEE2DC"
                            BorderBrush="#BAB2B5"
                            Cursor="Hand"/>
                </StackPanel>
            </ScrollViewer>

            <!-- Кнопка добавления -->
            <Button Grid.Column="1"
                    Content="Добавить пользователя"
                    Command="{Binding OpenCreateWindowCommand}"
                    Padding="24,12"
                    FontSize="16"
                    Background="#123C69"
                    Foreground="#EEE2DC"
                    BorderBrush="#BAB2B5"
                    BorderThickness="2"
                    Cursor="Hand">
                <Button.Triggers>
                    <EventTrigger RoutedEvent="MouseEnter">
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetProperty="(Background).(SolidColorBrush.Color)"
                                                To="#AC3B61" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="MouseLeave">
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetProperty="(Background).(SolidColorBrush.Color)"
                                                To="#123C69" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Button.Triggers>
            </Button>
        </Grid>

        <!-- Сообщение об ошибке -->
        <TextBlock Text="{Binding ErrorMessage}"
                   Grid.Row="1"
                   Foreground="#AC3B61"
                   Margin="0,80,0,0"
                   TextWrapping="Wrap"
                   Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>

        <!-- Список пользователей -->
        <Border Grid.Row="2"
                Background="#EEE2DC"
                CornerRadius="8"
                Padding="16">
            <ListView x:Name="UsersListView"
                      ItemsSource="{Binding Users}"
                      Style="{StaticResource TableListViewStyle}">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem" BasedOn="{StaticResource TableListViewItemStyle}">
                        <EventSetter Event="MouseDoubleClick" Handler="UsersListViewItem_DoubleClick"/>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.View>
                    <GridView AllowsColumnReorder="True"
                              ColumnHeaderContainerStyle="{StaticResource TableGridViewColumnHeaderStyle}">
                        <GridViewColumn Header="Email" Width="220"
                                        DisplayMemberBinding="{Binding Email}"/>
                        <GridViewColumn Header="ФИО" Width="260">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Foreground="#123C69">
                                        <Run Text="{Binding FirstName}"/>
                                        <Run Text=" "/>
                                        <Run Text="{Binding MiddleName}"/>
                                        <Run Text=" "/>
                                        <Run Text="{Binding Patronymic}"/>
                                    </TextBlock>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Телефон" Width="150"
                                        DisplayMemberBinding="{Binding PhoneNumber}"/>
                        <GridViewColumn Header="Роль" Width="150"
                                        DisplayMemberBinding="{Binding RoleName}"/>
                        <GridViewColumn Header="Дата создания" Width="180">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Foreground="#123C69">
                                        <Run Text="{Binding CreationDatetime, StringFormat='{}{0:dd.MM.yyyy HH:mm}'}"/>
                                    </TextBlock>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Действия" Width="160">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Удалить"
                                            Command="{Binding DataContext.DeleteUserCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                            CommandParameter="{Binding}"
                                            Padding="12,6"
                                            Background="#AC3B61"
                                            Foreground="#EEE2DC"
                                            BorderBrush="#123C69"
                                            BorderThickness="1"
                                            FontSize="12"
                                            Cursor="Hand"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </Border>

        <!-- Панель пагинации -->
        <Grid Grid.Row="3" Margin="0,16,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Информация о странице -->
            <TextBlock Grid.Column="0"
                       VerticalAlignment="Center"
                       Foreground="#123C69">
                <Run Text="Страница"/>
                <Run Text="{Binding CurrentPage}"/>
                <Run Text=" из "/>
                <Run Text="{Binding TotalPages}"/>
                <Run Text=" (Всего: "/>
                <Run Text="{Binding TotalCount}"/>
                <Run Text=")"/>
            </TextBlock>

            <!-- Кнопки навигации -->
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <!-- Выбор размера страницы -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,16,0">
                    <TextBlock Text="Строк на странице: " 
                               Foreground="#123C69" 
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"/>
                    <ComboBox Width="80"
                              SelectedItem="{Binding PageSize, UpdateSourceTrigger=PropertyChanged}"
                              ItemsSource="{Binding AvailablePageSizes}"
                              Background="#EEE2DC"
                              Foreground="#123C69"
                              BorderBrush="#BAB2B5"
                              BorderThickness="1"/>
                </StackPanel>
                
                <Button Content="◄ Назад"
                        Command="{Binding PreviousPageCommand}"
                        IsEnabled="{Binding CurrentPage, Converter={StaticResource GreaterThanOneConverter}}"
                        Padding="16,8"
                        Margin="0,0,8,0"
                        Background="#123C69"
                        Foreground="#EEE2DC"
                        BorderBrush="#BAB2B5"
                        Cursor="Hand"/>
                <Button Content="Вперёд ►"
                        Command="{Binding NextPageCommand}"
                        Padding="16,8"
                        Margin="0,0,8,0"
                        Background="#123C69"
                        Foreground="#EEE2DC"
                        BorderBrush="#BAB2B5"
                        Cursor="Hand">
                    <Button.IsEnabled>
                        <MultiBinding Converter="{StaticResource LessThanTotalPagesConverter}">
                            <Binding Path="CurrentPage"/>
                            <Binding Path="TotalPages"/>
                        </MultiBinding>
                    </Button.IsEnabled>
                </Button>
                <Button Content="Обновить"
                        Command="{Binding RefreshCommand}"
                        Padding="16,8"
                        Background="#AC3B61"
                        Foreground="#EEE2DC"
                        BorderBrush="#BAB2B5"
                        Cursor="Hand"/>
            </StackPanel>
        </Grid>

        <!-- Индикатор загрузки -->
        <Border Grid.Row="2"
                Background="#80000000"
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                Panel.ZIndex="1000">
            <TextBlock Text="Загрузка..."
                       Foreground="White"
                       FontSize="20"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
    </Grid>
</UserControl>

