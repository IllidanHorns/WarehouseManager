<Window x:Class="WarehouseManager.Wpf.View.CartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Корзина"
        Width="800"
        Height="600"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource SurfaceBrush}">
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="Корзина"
                   Grid.Row="0"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="{DynamicResource PrimaryTextBrush}"
                   Margin="0,0,0,16"/>

        <!-- Список товаров -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Items}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="{DynamicResource PanelBrush}"
                                CornerRadius="8"
                                Padding="16"
                                Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="{Binding Product.Name}"
                                               FontSize="16"
                                               FontWeight="Bold"
                                               Foreground="{DynamicResource PrimaryTextBrush}"
                                               Margin="0,0,0,4"/>
                                    <TextBlock Text="{Binding Product.CategoryName}"
                                               FontSize="12"
                                               Foreground="{DynamicResource AccentSecondaryBrush}"
                                               Margin="0,0,0,4"/>
                                    <TextBlock>
                                        <Run Text="Склад: " Foreground="{DynamicResource PrimaryTextBrush}"/>
                                        <Run Text="{Binding WarehouseAddress}" Foreground="{DynamicResource PrimaryTextBrush}"/>
                                    </TextBlock>
                                    <TextBlock Margin="0,4,0,0">
                                        <Run Text="Цена: " Foreground="{DynamicResource PrimaryTextBrush}"/>
                                        <Run Text="{Binding UnitPrice, StringFormat='{}{0:F2}', Mode=OneWay}" Foreground="{DynamicResource PrimaryTextBrush}" FontWeight="Bold"/>
                                        <Run Text=" руб." Foreground="{DynamicResource PrimaryTextBrush}"/>
                                    </TextBlock>
                                    <TextBlock Margin="0,4,0,0">
                                        <Run Text="Доступно: " Foreground="{DynamicResource PrimaryTextBrush}"/>
                                        <Run Text="{Binding AvailableQuantity}" Foreground="{DynamicResource PrimaryTextBrush}"/>
                                    </TextBlock>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0">
                                    <Button Content="-"
                                            Click="DecreaseQuantity_Click"
                                            Tag="{Binding}"
                                            Padding="8,4"
                                            Width="30"
                                            Background="{DynamicResource AccentBrush}"
                                            Foreground="{DynamicResource SecondaryTextBrush}"
                                            BorderBrush="{DynamicResource BorderBrushBase}"
                                            Cursor="Hand"/>
                                    <TextBox x:Name="QuantityTextBox"
                                             Text="{Binding Quantity, UpdateSourceTrigger=LostFocus}"
                                             Width="50"
                                             Margin="8,0"
                                             Foreground="{DynamicResource PrimaryTextBrush}"
                                             Background="Transparent"
                                             BorderBrush="{DynamicResource BorderBrushBase}"
                                             BorderThickness="1"
                                             TextAlignment="Center"
                                             LostFocus="QuantityTextBox_LostFocus"
                                             Tag="{Binding}"/>
                                    <Button Content="+"
                                            Click="IncreaseQuantity_Click"
                                            Tag="{Binding}"
                                            Padding="8,4"
                                            Width="30"
                                            Background="{DynamicResource AccentBrush}"
                                            Foreground="{DynamicResource SecondaryTextBrush}"
                                            BorderBrush="{DynamicResource BorderBrushBase}"
                                            Cursor="Hand"/>
                                </StackPanel>

                                <TextBlock Grid.Column="2"
                                           VerticalAlignment="Center"
                                           Margin="16,0"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="{DynamicResource PrimaryTextBrush}">
                                    <Run Text="{Binding TotalPrice, StringFormat='{}{0:F2}', Mode=OneWay}"/>
                                    <Run Text=" руб."/>
                                </TextBlock>

                                <Button Grid.Column="3"
                                        Content="✕"
                                        Command="{Binding DataContext.RemoveItemCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}"
                                        Padding="8,4"
                                        Width="30"
                                        Background="{DynamicResource AccentSecondaryBrush}"
                                        Foreground="{DynamicResource SecondaryTextBrush}"
                                        BorderBrush="{DynamicResource BorderBrushBase}"
                                        Cursor="Hand"
                                        ToolTip="Удалить"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Итого -->
        <Border Grid.Row="2"
                Background="{DynamicResource PanelBrush}"
                CornerRadius="8"
                Padding="16"
                Margin="0,16,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Итого:"
                           Grid.Column="0"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="{DynamicResource PrimaryTextBrush}"
                           VerticalAlignment="Center"/>
                <TextBlock Text="{Binding TotalPrice, StringFormat='{}{0:F2} руб.', Mode=OneWay}"
                           Grid.Column="1"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="{DynamicResource AccentSecondaryBrush}"/>
            </Grid>
        </Border>

        <!-- Кнопки -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Очистить корзину"
                    Command="{Binding ClearCartCommand}"
                    Padding="16,8"
                    Margin="0,0,8,0"
                    Background="{DynamicResource BorderBrushBase}"
                    Foreground="{DynamicResource PrimaryTextBrush}"
                    BorderBrush="{DynamicResource PrimaryTextBrush}"
                    BorderThickness="2"
                    Cursor="Hand"/>
            <Button Content="Обновить остатки"
                    Command="{Binding RefreshAvailabilityCommand}"
                    Padding="16,8"
                    Margin="0,0,8,0"
                    Background="{DynamicResource AccentBrush}"
                    Foreground="{DynamicResource SecondaryTextBrush}"
                    BorderBrush="{DynamicResource BorderBrushBase}"
                    Cursor="Hand"/>
            <Button Content="Оформить заказ"
                    Command="{Binding OpenCheckoutCommand}"
                    Padding="24,12"
                    FontSize="16"
                    Background="{DynamicResource AccentSecondaryBrush}"
                    Foreground="{DynamicResource SecondaryTextBrush}"
                    BorderBrush="{DynamicResource BorderBrushBase}"
                    BorderThickness="2"
                    Cursor="Hand"
                    IsEnabled="{Binding Items.Count, Converter={StaticResource GreaterThanZeroConverter}}"/>
        </StackPanel>

        <!-- Индикатор загрузки -->
        <Border Grid.Row="1"
                Background="#80000000"
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                Panel.ZIndex="1000">
            <TextBlock Text="Загрузка..."
                       Foreground="White"
                       FontSize="20"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
    </Grid>
</Window>

