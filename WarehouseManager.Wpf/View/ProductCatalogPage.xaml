<UserControl x:Class="WarehouseManager.Wpf.View.ProductCatalogPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="{DynamicResource SurfaceBrush}">
    <Grid Margin="24" Background="{DynamicResource SurfaceBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="Каталог продуктов"
                   Grid.Row="0"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="{DynamicResource PrimaryTextBrush}"
                   Margin="0,0,0,16"/>

        <!-- Фильтры -->
        <Border Grid.Row="1"
                Background="{DynamicResource PanelBrush}"
                CornerRadius="8"
                Padding="12"
                Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <ScrollViewer Grid.Column="0" 
                              HorizontalScrollBarVisibility="Auto" 
                              VerticalScrollBarVisibility="Disabled">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Название:"
                                   Foreground="{DynamicResource PrimaryTextBrush}"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"/>
                        <TextBox Text="{Binding NameFilter, UpdateSourceTrigger=PropertyChanged}"
                                 Width="200"
                                 Foreground="{DynamicResource PrimaryTextBrush}"
                                 Background="Transparent"
                                 BorderBrush="{DynamicResource BorderBrushBase}"
                                 BorderThickness="1"
                                 CaretBrush="{DynamicResource PrimaryTextBrush}"
                                 Margin="0,0,16,0"/>

                        <TextBlock Text="Категория:"
                                   Foreground="{DynamicResource PrimaryTextBrush}"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"/>
                        <ComboBox SelectedValue="{Binding SelectedCategoryId}"
                                  DisplayMemberPath="Name"
                                  SelectedValuePath="Id"
                                  ItemsSource="{Binding Categories}"
                                  Width="200"
                                  Background="{DynamicResource PanelBrush}"
                                  Foreground="{DynamicResource PrimaryTextBrush}"
                                  BorderBrush="{DynamicResource BorderBrushBase}"
                                  BorderThickness="1"
                                  Margin="0,0,16,0"/>

                        <TextBlock Text="Склад:"
                                   Foreground="{DynamicResource PrimaryTextBrush}"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,16,0">
                            <ComboBox SelectedValue="{Binding SelectedWarehouseId}"
                                      DisplayMemberPath="Address"
                                      SelectedValuePath="Id"
                                      ItemsSource="{Binding Warehouses}"
                                      Width="200"
                                      Background="{DynamicResource PanelBrush}"
                                      Foreground="{DynamicResource PrimaryTextBrush}"
                                      BorderBrush="{DynamicResource BorderBrushBase}"
                                      BorderThickness="1"/>
                            <Button Content="✕"
                                    Command="{Binding ClearWarehouseFilterCommand}"
                                    Padding="8,4"
                                    Margin="4,0,0,0"
                                    Background="{DynamicResource AccentSecondaryBrush}"
                                    Foreground="{DynamicResource SecondaryTextBrush}"
                                    BorderBrush="{DynamicResource BorderBrushBase}"
                                    BorderThickness="1"
                                    Cursor="Hand"
                                    FontSize="12"
                                    Width="30"
                                    Visibility="{Binding SelectedWarehouseId, Converter={StaticResource GreaterThanOneConverter}}"
                                    ToolTip="Очистить выбор"/>
                        </StackPanel>

                        <Button Content="Поиск"
                                Command="{Binding FilterCommand}"
                                Margin="8,0,0,0"
                                Padding="16,8"
                                Background="{DynamicResource AccentBrush}"
                                Foreground="{DynamicResource SecondaryTextBrush}"
                                BorderBrush="{DynamicResource BorderBrushBase}"
                                Cursor="Hand"/>
                    </StackPanel>
                </ScrollViewer>
                <Button Grid.Column="1"
                        Content="Корзина"
                        Command="{Binding OpenCartCommand}"
                        Padding="24,12"
                        FontSize="16"
                        Background="{DynamicResource AccentSecondaryBrush}"
                        Foreground="{DynamicResource SecondaryTextBrush}"
                        BorderBrush="{DynamicResource BorderBrushBase}"
                        BorderThickness="2"
                        Cursor="Hand"
                        Margin="16,0,0,0"/>
            </Grid>
        </Border>

        <!-- Карточки продуктов -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="ProductsItemsControl" ItemsSource="{Binding Products}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="3"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="{DynamicResource CardBrush}"
                                CornerRadius="8"
                                Padding="16"
                                Margin="8"
                                BorderBrush="{DynamicResource BorderBrushBase}"
                                BorderThickness="1">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="{Binding Name}"
                                           Grid.Row="0"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           Foreground="{DynamicResource PrimaryTextBrush}"
                                           Margin="0,0,0,8"/>

                                <TextBlock Text="{Binding CategoryName}"
                                           Grid.Row="1"
                                           FontSize="12"
                                           Foreground="{DynamicResource AccentSecondaryBrush}"
                                           Margin="0,0,0,8"/>

                                <TextBlock Grid.Row="2" Margin="0,0,0,8">
                                    <Run Text="Цена: " Foreground="{DynamicResource PrimaryTextBrush}"/>
                                    <Run Text="{Binding Price, StringFormat='{}{0:F2}'}" Foreground="{DynamicResource PrimaryTextBrush}" FontWeight="Bold"/>
                                    <Run Text=" руб." Foreground="{DynamicResource PrimaryTextBrush}"/>
                                </TextBlock>

                                <TextBlock Grid.Row="3" Margin="0,0,0,8">
                                    <Run Text="Вес: " Foreground="{DynamicResource PrimaryTextBrush}"/>
                                    <Run Text="{Binding Weight, StringFormat='{}{0:F2}'}" Foreground="{DynamicResource PrimaryTextBrush}"/>
                                    <Run Text=" кг" Foreground="{DynamicResource PrimaryTextBrush}"/>
                                </TextBlock>

                                <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,0,0,8">
                                    <TextBlock Text="Склад:" Foreground="{DynamicResource PrimaryTextBrush}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <ComboBox x:Name="WarehouseComboBox"
                                              DisplayMemberPath="Address"
                                              SelectedValuePath="Id"
                                              ItemsSource="{Binding DataContext.Warehouses, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                              Width="150"
                                              Background="{DynamicResource PanelBrush}"
                                              Foreground="{DynamicResource PrimaryTextBrush}"
                                              BorderBrush="{DynamicResource BorderBrushBase}"
                                              BorderThickness="1"
                                              Loaded="WarehouseComboBox_Loaded"
                                              SelectionChanged="WarehouseComboBox_SelectionChanged"
                                              Tag="{Binding}"/>
                                </StackPanel>

                                <Grid Grid.Row="5" Margin="0,0,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Кол-во:" Foreground="{DynamicResource PrimaryTextBrush}" VerticalAlignment="Center" Grid.Column="0" Margin="0,0,8,0"/>
                                    <TextBox x:Name="QuantityTextBox"
                                             Text="1"
                                             Width="60"
                                             Foreground="{DynamicResource PrimaryTextBrush}"
                                             Background="Transparent"
                                             BorderBrush="{DynamicResource BorderBrushBase}"
                                             BorderThickness="1"
                                             Margin="0,0,8,0"
                                             Tag="{Binding}"
                                             Grid.Column="1"/>
                                    <TextBlock x:Name="AvailableQuantityText"
                                               Text="Доступно: 0"
                                               Foreground="{DynamicResource PrimaryTextBrush}"
                                               VerticalAlignment="Center"
                                               Margin="0,0,8,0"
                                               Grid.Column="2"/>
                                    <Button Content="В корзину"
                                            Click="AddToCart_Click"
                                            Tag="{Binding}"
                                            Padding="12,6"
                                            Background="{DynamicResource AccentBrush}"
                                            Foreground="{DynamicResource SecondaryTextBrush}"
                                            BorderBrush="{DynamicResource BorderBrushBase}"
                                            Cursor="Hand"
                                            MinWidth="80"
                                            Grid.Column="3"/>
                                </Grid>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Пагинация -->
        <Grid Grid.Row="3" Margin="0,16,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       VerticalAlignment="Center"
                       Foreground="{DynamicResource PrimaryTextBrush}">
                <Run Text="Страница"/>
                <Run Text="{Binding CurrentPage}"/>
                <Run Text=" из "/>
                <Run Text="{Binding TotalPages}"/>
                <Run Text=" (Всего: "/>
                <Run Text="{Binding TotalCount}"/>
                <Run Text=")"/>
            </TextBlock>

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,16,0">
                    <TextBlock Text="Строк на странице: " 
                               Foreground="{DynamicResource PrimaryTextBrush}" 
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"/>
                    <ComboBox Width="80"
                              SelectedItem="{Binding PageSize, UpdateSourceTrigger=PropertyChanged}"
                              ItemsSource="{Binding AvailablePageSizes}"
                              Background="{DynamicResource PanelBrush}"
                              Foreground="{DynamicResource PrimaryTextBrush}"
                              BorderBrush="{DynamicResource BorderBrushBase}"
                              BorderThickness="1"/>
                </StackPanel>
                
                <Button Content="◄ Назад"
                        Command="{Binding PreviousPageCommand}"
                        IsEnabled="{Binding CurrentPage, Converter={StaticResource GreaterThanOneConverter}}"
                        Padding="16,8"
                        Margin="0,0,8,0"
                        Background="{DynamicResource AccentBrush}"
                        Foreground="{DynamicResource SecondaryTextBrush}"
                        BorderBrush="{DynamicResource BorderBrushBase}"
                        Cursor="Hand"/>
                <Button Content="Вперёд ►"
                        Command="{Binding NextPageCommand}"
                        Padding="16,8"
                        Margin="0,0,8,0"
                        Background="{DynamicResource AccentBrush}"
                        Foreground="{DynamicResource SecondaryTextBrush}"
                        BorderBrush="{DynamicResource BorderBrushBase}"
                        Cursor="Hand">
                    <Button.IsEnabled>
                        <MultiBinding Converter="{StaticResource LessThanTotalPagesConverter}">
                            <Binding Path="CurrentPage"/>
                            <Binding Path="TotalPages"/>
                        </MultiBinding>
                    </Button.IsEnabled>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Индикатор загрузки -->
        <Border Grid.Row="2"
                Background="#80000000"
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                Panel.ZIndex="1000">
            <TextBlock Text="Загрузка..."
                       Foreground="White"
                       FontSize="20"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
    </Grid>
</UserControl>

