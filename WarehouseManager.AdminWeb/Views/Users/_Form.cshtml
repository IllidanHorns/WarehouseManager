@model WarehouseManager.AdminWeb.ViewModels.Users.UserFormViewModel

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<div class="row g-3">
    <div class="col-md-6">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" autocomplete="email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="PhoneNumber" class="form-label"></label>
        <input asp-for="PhoneNumber" class="form-control" autocomplete="tel" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
</div>

<div class="row g-3 mt-0">
    <div class="col-md-4">
        <label asp-for="FirstName" class="form-label"></label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="col-md-4">
        <label asp-for="MiddleName" class="form-label"></label>
        <input asp-for="MiddleName" class="form-control" />
        <span asp-validation-for="MiddleName" class="text-danger"></span>
    </div>
    <div class="col-md-4">
        <label asp-for="Patronymic" class="form-label"></label>
        <input asp-for="Patronymic" class="form-control" />
        <span asp-validation-for="Patronymic" class="text-danger"></span>
    </div>
</div>

<div class="row g-3 mt-0">
    <div class="col-md-4">
        <label asp-for="RoleId" class="form-label"></label>
        <select asp-for="RoleId" asp-items="Model.Roles" class="form-select"></select>
        <span asp-validation-for="RoleId" class="text-danger"></span>
    </div>
    <div class="col-md-4">
        @if (Model.ShowPasswordField)
        {
            <label asp-for="Password" class="form-label"></label>
            <input asp-for="Password" class="form-control" autocomplete="new-password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        }
        else
        {
            <label asp-for="NewPassword" class="form-label"></label>
            <input asp-for="NewPassword" class="form-control" autocomplete="new-password" />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        }
    </div>
</div>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger mt-3">@Model.ErrorMessage</div>
}

