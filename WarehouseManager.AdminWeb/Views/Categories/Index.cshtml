@model WarehouseManager.AdminWeb.ViewModels.Categories.CategoryListViewModel

@{
    ViewData["Title"] = "Категории";
    var result = Model.Result;
}

<div class="card border-0 shadow-sm mb-4">
    <div class="card-body">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-md-4">
                <label class="form-label" asp-for="Filter.Name">Название</label>
                <input class="form-control" asp-for="Filter.Name" placeholder="Поиск по названию" />
            </div>
            <div class="col-md-2">
                <label class="form-label" asp-for="Filter.PageSize">На странице</label>
                <input class="form-control" asp-for="Filter.PageSize" type="number" min="5" max="100" />
            </div>
            <div class="col-md-2 form-check mt-4">
                <input class="form-check-input" asp-for="Filter.IncludeArchived" />
                <label class="form-check-label" asp-for="Filter.IncludeArchived">Показывать архивные</label>
            </div>
            <div class="col-md-4 text-end">
                <button type="submit" class="btn btn-primary me-2">Применить</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Сбросить</a>
            </div>
        </form>
    </div>
</div>

@if (TempData["SuccessMessage"] is string successMessage)
{
    <div class="alert alert-success">@successMessage</div>
}

@if (TempData["ErrorMessage"] is string tempError)
{
    <div class="alert alert-danger">@tempError</div>
}

@if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="h5 mb-0">Всего: @(result?.TotalCount ?? 0)</h2>
    <a asp-action="Create" class="btn btn-success">Добавить категорию</a>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0 align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Название</th>
                        <th>Описание</th>
                        <th>Товаров</th>
                        <th>Создана</th>
                        <th class="text-end">Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @if (result?.Items?.Any() == true)
                    {
                        foreach (var category in result.Items)
                        {
                            <tr class="@(category.IsArchived ? "table-secondary" : string.Empty)">
                                <td>@category.Name</td>
                                <td>@category.Description</td>
                                <td>@category.ActiveProductCount</td>
                                <td>@category.CreationDatetime.ToLocalTime().ToString("dd.MM.yyyy HH:mm")</td>
                                <td class="text-end">
                                    <div class="btn-group">
                                        <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-sm btn-outline-primary">Изменить</a>
                                        <form asp-action="Archive" asp-route-id="@category.Id" method="post" class="ms-2" onsubmit="return confirm('Архивировать категорию?');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-outline-danger" @(category.IsArchived ? "disabled" : string.Empty)>Архивировать</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center py-4">Категории не найдены.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@if (result is not null && result.TotalPages > 1)
{
    <nav class="mt-3">
        <ul class="pagination justify-content-end">
            @{
                var currentPage = result.Page;
                for (var pageNumber = 1; pageNumber <= result.TotalPages; pageNumber++)
                {
                    var isActive = pageNumber == currentPage ? "active" : string.Empty;
                    <li class="page-item @isActive">
                        <a class="page-link" asp-action="Index"
                           asp-route-Page="@(pageNumber)"
                           asp-route-PageSize="@Model.Filter.PageSize"
                           asp-route-Name="@Model.Filter.Name"
                           asp-route-IncludeArchived="@Model.Filter.IncludeArchived">
                            @pageNumber
                        </a>
                    </li>;
                }
            }
        </ul>
    </nav>
}

