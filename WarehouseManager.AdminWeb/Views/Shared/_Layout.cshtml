@using System.Security.Claims
@{
    var role = User.FindFirstValue(ClaimTypes.Role) ?? string.Empty;
    var userName = User.Identity?.Name ?? "";
    var navigation = new List<(string Title, string Controller, string Action)> { ("Главная", "Home", "Index") };

    switch (role)
    {
        case "Администратор":
            navigation.Add(("Пользователи", "Users", "Index"));
            navigation.Add(("Сотрудники", "Employees", "Index"));
            navigation.Add(("Склады", "Warehouses", "Index"));
            navigation.Add(("Категории", "Categories", "Index"));
            navigation.Add(("Продукты", "Products", "Index"));
            navigation.Add(("Остатки", "Stocks", "Index"));
            navigation.Add(("Заказы", "Orders", "Index"));
            break;
        case "Менеджер склада":
            navigation.Add(("Склады", "Warehouses", "Index"));
            navigation.Add(("Категории", "Categories", "Index"));
            navigation.Add(("Продукты", "Products", "Index"));
            navigation.Add(("Остатки", "Stocks", "Index"));
            navigation.Add(("Заказы", "Orders", "Index"));
            break;
        default:
            navigation.Add(("Каталог", "Products", "Index"));
            navigation.Add(("Заказы", "Orders", "Index"));
            break;
    }
}
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Warehouse Admin</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
          crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body {
            min-height: 100vh;
            background-color: #f4f6fb;
        }

        .layout {
            display: grid;
            grid-template-columns: 260px 1fr;
            min-height: 100vh;
        }

        .sidebar {
            background: #1f2a44;
            color: #fff;
            padding: 24px 20px;
        }

        .sidebar .brand {
            font-size: 1.4rem;
            font-weight: 600;
            margin-bottom: 24px;
        }

        .sidebar a {
            color: #d9e2f1;
            text-decoration: none;
        }

        .sidebar a.active,
        .sidebar a:hover {
            color: #fff;
        }

        .sidebar .nav-link {
            border-radius: 10px;
            padding: 10px 14px;
            margin-bottom: 6px;
        }

        .sidebar .nav-link.active,
        .sidebar .nav-link:hover {
            background-color: rgba(255, 255, 255, 0.1);
        }

        .content {
            padding: 32px 40px;
        }

        .top-bar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 24px;
        }

        .user-info {
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .logout-btn {
            background: none;
            border: none;
            color: #dc3545;
            font-weight: 600;
            cursor: pointer;
        }

        @@media (max-width: 992px) {
            .layout {
                grid-template-columns: 1fr;
            }

            .sidebar {
                grid-row: 2;
            }
        }
    </style>
</head>
<body>
    <div class="layout">
        <aside class="sidebar">
            <div class="brand">Warehouse Admin</div>
            <div class="mb-4 small text-muted">@role</div>
            <nav class="nav flex-column">
                @foreach (var item in navigation)
                {
                    var isActive = string.Equals(ViewContext.RouteData.Values["Controller"]?.ToString(), item.Controller, StringComparison.OrdinalIgnoreCase);
                    <a class="nav-link @(isActive ? "active" : string.Empty)" asp-controller="@item.Controller" asp-action="@item.Action">@item.Title</a>
                }
            </nav>
        </aside>
        <section class="content">
            <div class="top-bar">
                <h1 class="h4 mb-0">@ViewData["Title"]</h1>
                <div class="user-info">
                    <span class="fw-semibold">@userName</span>
                    <form asp-controller="Account" asp-action="Logout" method="post">
                        <button type="submit" class="logout-btn">Выйти</button>
                    </form>
                </div>
            </div>

            <div>
                @RenderBody()
            </div>
        </section>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
