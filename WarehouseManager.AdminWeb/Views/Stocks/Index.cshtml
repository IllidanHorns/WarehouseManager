@model WarehouseManager.AdminWeb.ViewModels.Stocks.StockListViewModel

@{
    ViewData["Title"] = "Остатки";
    var result = Model.Result;
}

<div class="card border-0 shadow-sm mb-4">
    <div class="card-body">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-md-3">
                <label class="form-label" asp-for="Filter.ProductName">Название товара</label>
                <input class="form-control" asp-for="Filter.ProductName" placeholder="Поиск по названию" />
            </div>
            <div class="col-md-3">
                <label class="form-label" asp-for="Filter.ProductId">Продукт</label>
                <select class="form-select" asp-for="Filter.ProductId" asp-items="Model.Products">
                    <option value="">Все продукты</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label" asp-for="Filter.WarehouseAddress">Адрес склада</label>
                <input class="form-control" asp-for="Filter.WarehouseAddress" placeholder="Поиск по адресу" />
            </div>
            <div class="col-md-3">
                <label class="form-label" asp-for="Filter.WarehouseId">Склад</label>
                <select class="form-select" asp-for="Filter.WarehouseId" asp-items="Model.Warehouses">
                    <option value="">Все склады</option>
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label" asp-for="Filter.PageSize">На странице</label>
                <input class="form-control" asp-for="Filter.PageSize" type="number" min="5" max="100" />
            </div>
            <div class="col-md-2 form-check mt-4">
                <input class="form-check-input" asp-for="Filter.IncludeArchived" />
                <label class="form-check-label" asp-for="Filter.IncludeArchived">Показывать архивные</label>
            </div>
            <div class="col-md-4 text-end">
                <button type="submit" class="btn btn-primary me-2">Применить</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Сбросить</a>
            </div>
        </form>
    </div>
</div>

@if (TempData["SuccessMessage"] is string successMessage)
{
    <div class="alert alert-success">@successMessage</div>
}

@if (TempData["ErrorMessage"] is string tempError)
{
    <div class="alert alert-danger">@tempError</div>
}

@if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="h5 mb-0">Всего: @(result?.TotalCount ?? 0)</h2>
    <a asp-action="Create" class="btn btn-success">Добавить остаток</a>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0 align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Товар</th>
                        <th>Склад</th>
                        <th>Количество</th>
                        <th class="text-end">Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @if (result?.Items?.Any() == true)
                    {
                        foreach (var stock in result.Items)
                        {
                            <tr>
                                <td>@stock.ProductName</td>
                                <td>@stock.WarehouseAddress</td>
                                <td>@stock.Quantity</td>
                                <td class="text-end">
                                    <div class="btn-group">
                                        <a asp-action="Edit" asp-route-id="@stock.Id" class="btn btn-sm btn-outline-primary">Изменить</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center py-4">Остатки не найдены.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@if (result is not null && result.TotalPages > 1)
{
    <nav class="mt-3">
        <ul class="pagination justify-content-end">
            @{
                var currentPage = result.Page;
                for (var pageNumber = 1; pageNumber <= result.TotalPages; pageNumber++)
                {
                    var isActive = pageNumber == currentPage ? "active" : string.Empty;
                    <li class="page-item @isActive">
                        <a class="page-link" asp-action="Index"
                           asp-route-Page="@(pageNumber)"
                           asp-route-PageSize="@Model.Filter.PageSize"
                           asp-route-ProductId="@Model.Filter.ProductId"
                           asp-route-WarehouseId="@Model.Filter.WarehouseId"
                           asp-route-ProductName="@Model.Filter.ProductName"
                           asp-route-WarehouseAddress="@Model.Filter.WarehouseAddress"
                           asp-route-IncludeArchived="@Model.Filter.IncludeArchived">
                            @pageNumber
                        </a>
                    </li>;
                }
            }
        </ul>
    </nav>
}
