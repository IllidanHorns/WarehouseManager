@model WarehouseManager.AdminWeb.ViewModels.Orders.OrderAssignEmployeeViewModel

@{
    ViewData["Title"] = "Назначение сотрудника";
}

<div class="card shadow-sm border-0">
    <div class="card-body">
        <form asp-action="AssignEmployee" method="post" class="needs-validation" novalidate>
            @Html.AntiForgeryToken()
            <input asp-for="OrderId" type="hidden" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label class="form-label">Заказ</label>
                <input class="form-control" value="Заказ #@Model.Order?.Id | @Model.Order?.WarehouseAddress" readonly />
            </div>
            <div class="mb-3">
                <label class="form-label">Текущий сотрудник</label>
                <input class="form-control" value="@Model.Order?.EmployeeFullName" readonly />
            </div>
            <div class="mb-3">
                <label asp-for="EmployeeId" class="form-label"></label>
                <select asp-for="EmployeeId" asp-items="Model.Employees" class="form-select"></select>
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger mt-3">@Model.ErrorMessage</div>
            }

            <div class="d-flex justify-content-end gap-2 mt-4">
                <a asp-action="Index" class="btn btn-outline-secondary">Отмена</a>
                <button type="submit" class="btn btn-primary">Сохранить</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
