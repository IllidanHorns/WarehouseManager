@model WarehouseManager.AdminWeb.ViewModels.Orders.OrderListViewModel

@{
    ViewData["Title"] = "Заказы";
    var result = Model.Result;
}

<div class="card border-0 shadow-sm mb-4">
    <div class="card-body">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-md-3">
                <label class="form-label" asp-for="Filter.WarehouseId">Склад</label>
                <select class="form-select" asp-for="Filter.WarehouseId" asp-items="Model.Warehouses">
                    <option value="">Все склады</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label" asp-for="Filter.EmployeeId">Сотрудник</label>
                <select class="form-select" asp-for="Filter.EmployeeId" asp-items="Model.Employees">
                    <option value="">Все сотрудники</option>
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label" asp-for="Filter.StatusId">Статус</label>
                <select class="form-select" asp-for="Filter.StatusId" asp-items="Model.Statuses">
                    <option value="">Все статусы</option>
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label" asp-for="Filter.UserId">Покупатель</label>
                <select class="form-select" asp-for="Filter.UserId" asp-items="Model.Users">
                    <option value="">Все покупатели</option>
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label" asp-for="Filter.PageSize">На странице</label>
                <input class="form-control" asp-for="Filter.PageSize" type="number" min="5" max="100" />
            </div>
            <div class="col-md-2 form-check mt-4">
                <input class="form-check-input" asp-for="Filter.IncludeArchived" />
                <label class="form-check-label" asp-for="Filter.IncludeArchived">Показывать архивные</label>
            </div>
            <div class="col-md-4 text-end">
                <button type="submit" class="btn btn-primary me-2">Применить</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Сбросить</a>
            </div>
        </form>
    </div>
</div>

@if (TempData["SuccessMessage"] is string successMessage)
{
    <div class="alert alert-success">@successMessage</div>
}

@if (TempData["ErrorMessage"] is string tempError)
{
    <div class="alert alert-danger">@tempError</div>
}

@if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}

<div class="card border-0 shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0 align-middle">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>Склад</th>
                        <th>Ответственный</th>
                        <th>Покупатель</th>
                        <th>Статус</th>
                        <th>Сумма</th>
                        <th>Создан</th>
                        <th class="text-end">Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @if (result?.Items?.Any() == true)
                    {
                        foreach (var order in result.Items)
                        {
                            <tr>
                                <td>@order.Id</td>
                                <td>@order.WarehouseAddress</td>
                                <td>@order.EmployeeFullName</td>
                                <td>@order.UserEmail</td>
                                <td>@order.OrderStatusName</td>
                                <td>@order.TotalPrice.ToString("F2")</td>
                                <td>@order.CreationDatetime.ToLocalTime().ToString("dd.MM.yyyy HH:mm")</td>
                                <td class="text-end">
                                    <div class="btn-group">
                                        <a asp-action="EditStatus" asp-route-id="@order.Id" class="btn btn-sm btn-outline-primary">Статус</a>
                                        <a asp-action="AssignEmployee" asp-route-id="@order.Id" class="btn btn-sm btn-outline-secondary">Назначить</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center py-4">Заказы не найдены.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@if (result is not null && result.TotalPages > 1)
{
    <nav class="mt-3">
        <ul class="pagination justify-content-end">
            @{
                var currentPage = result.Page;
                for (var pageNumber = 1; pageNumber <= result.TotalPages; pageNumber++)
                {
                    var isActive = pageNumber == currentPage ? "active" : string.Empty;
                    <li class="page-item @isActive">
                        <a class="page-link" asp-action="Index"
                           asp-route-Page="@(pageNumber)"
                           asp-route-PageSize="@Model.Filter.PageSize"
                           asp-route-WarehouseId="@Model.Filter.WarehouseId"
                           asp-route-EmployeeId="@Model.Filter.EmployeeId"
                           asp-route-StatusId="@Model.Filter.StatusId"
                           asp-route-UserId="@Model.Filter.UserId"
                           asp-route-IncludeArchived="@Model.Filter.IncludeArchived">
                            @pageNumber
                        </a>
                    </li>;
                }
            }
        </ul>
    </nav>
}
